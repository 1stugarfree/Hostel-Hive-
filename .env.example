# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Admin Seed Credentials
ADMIN_EMAIL=admin@hostelconnect.gh
ADMIN_PASSWORD=Admin@1234

# JWT Secret (must be at least 256 bits / 32 characters)
JWT_SECRET=change-this-to-a-very-long-random-secret-key-for-production

# Database (for local dev, docker-compose defaults are used)
DB_URL=jdbc:postgresql://localhost:5432/hostelconnect
DB_USERNAME=hostelconnect
DB_PASSWORD=hostelconnect_secret

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Mail (for production, use SendGrid SMTP)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=

# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
